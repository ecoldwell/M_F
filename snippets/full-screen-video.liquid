<div class="full-video" style="background-color: {{settings.intro_overlay_background_color_video_full}}">
	<div class="intro-overlay-two intro-full-homepage" id="intro-overlay-two" >
	{% for link in linklists.full-page.links %}
	  <li class="{{handle}}  {% if link.active %}active{% endif %}">
	    <a href="{{ link.url }}">
	  <video id="intro-video-four" class="full" preload="none" autoplay="" loop="" muted poster="{{ settings.video_four | append : '.jpg' | file_url  }}">
	    <source id="intro-video-mp4-four" src="{{ settings.video_four | append : '.mp4' | file_url }}" type="video/mp4" />
	    <source id="intro-video-webm-four" data-src="{{ settings.video_four | append : '.webm' | file_url  }}" type="video/webm; codecs=vp8,vorbis" />
	  </video>
	    	
	    </a>
	  </li>
	{% endfor %}
	<script>
		if (showsVideo) {
		  var mp4 = document.getElementById("intro-video-mp4-four").getAttribute("data-src");
		  var webm = document.getElementById("intro-video-webm-four").getAttribute("data-src");
		  document.getElementById("intro-video-mp4-four").setAttribute("src", mp4);
		  document.getElementById("intro-video-webm-four").setAttribute("src", webm);
		  document.getElementById("intro-video-four").setAttribute("autoplay", true);
		  document.getElementById("intro-video-four").load();
		  document.getElementById("intro-video-four").oncanplay = function() {
		    document.getElementById("intro-video-four").play();
		    poster = document.getElementById("intro-video-four").getAttribute("poster")
		    document.getElementById("intro-video-four").setAttribute("data-poster", poster)
		    document.getElementById("intro-video-four").removeAttribute("poster")
		  };
		  document.getElementById("intro-video-four").style.display = "block";
		}
	</script>
</div>
</div>