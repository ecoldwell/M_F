	    <source id="intro-video-webm-three" data-src="{{ settings.video_three | append : '.webm' | file_url  }}" type="video/webm; codecs=vp8,vorbis" />
	  </video>
	    	
	    </a>
	  </li>
	{% endfor %}
	</div>
