<div class="intro-homepage" style="background-color: {{settings.intro_overlay_background_color_video}}">
	<div class="intro-overlay-one intro-homepage" id="intro-overlay-one" >
	{% for link in linklists.page-one.links %}
	  <li class="{{handle}}  {% if link.active %}active{% endif %}">
	    <a href="{{ link.url }}">
	  <video id="intro-video" class="one" preload="none" autoplay="" loop="" muted poster="{{ settings.video_one | append : '.jpg' | file_url  }}">
	    <source id="intro-video-mp4" src="{{ settings.video_one | append : '.mp4' | file_url }}" type="video/mp4" />
	    <source id="intro-video-webm" data-src="{{ settings.video_one | append : '.webm' | file_url  }}" type="video/webm; codecs=vp8,vorbis" />
	  </video>
	    	
	    </a>
	  </li>
	{% endfor %}
	{% for link in linklists.page-two.links %}
	  <li class="{{handle}}  {% if link.active %}active{% endif %}">
	    <a href="{{ link.url }}">
	    	
	  <video id="intro-video-two" class="two" preload="none" autoplay loop muted poster="{{ settings.video_two | append : '.jpg' | file_url  }}">
	    <source id="intro-video-mp4-two" data-src="{{ settings.video_two | append : '.mp4' | file_url }}" type="video/mp4" />
	    <source id="intro-video-webm-two" data-src="{{ settings.video_two | append : '.webm' | file_url  }}" type="video/webm; codecs=vp8,vorbis" />
	  </video>
	    </a>
	  </li>
	{% endfor %}
	{% for link in linklists.page-three.links %}
